@model ExpirationDate.Models.DTO.ItemDTO
@using ExpirationDate.Controllers
@inject ExpirationDate.Resources.SharedLocalizationService localizer

<h2>Edit Item</h2>
<div class="registration-authorization-container">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name" class="control-label">@localizer["CreatePage.Name"]</label>
            <input asp-for="Name" class="form-control" placeholder="@localizer["Field.Name"]" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">@localizer["CreatePage.Description"]</label>
            <input asp-for="Description" class="form-control" placeholder="@localizer["Field.Description"]" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Currency" class="control-label">@localizer["CreatePage.Currency"]</label>
            <select asp-for="Currency" class="form-control">
                <option value="USD">@localizer["Currency.USD"]</option>
                <option value="EUR">@localizer["Currency.EUR"]</option>
                <option value="UAH">@localizer["Currency.UAH"]</option>
            </select>
            <span asp-validation-for="Currency" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label">@localizer["CreatePage.Price"]</label>
            <input asp-for="Price" class="form-control" placeholder="@localizer["Field.Price"]" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Rating" class="control-label">@localizer["CreatePage.Rating"]</label>
            <input asp-for="Rating" class="form-control" placeholder="@localizer["Field.Rating"]" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageFile" class="control-label">@localizer["CreatePage.SelectFile"]</label>
            <div class="custom-file">
                <input asp-for="ImageFile" id="fileUpload" class="custom-file-input" type="file" />
                <label class="custom-file-label" for="fileUpload">@localizer["CreatePage.SelectFile"]</label>
            </div>
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ExpirationDate" class="control-label">@localizer["ExpirationDate"]</label>
            <input asp-for="ExpirationDate" class="form-control" />
            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="@localizer["CreatePage.Save"]" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
