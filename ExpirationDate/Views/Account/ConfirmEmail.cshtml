@{
    ViewData["Title"] = "Email Confirmation";
}

<h1>@ViewData["Title"]</h1>

@if (ViewData["Success"] != null && (bool)ViewData["Success"])
{
    <p>Your email address has been successfully confirmed. You can now log in to your account.</p>
}
else
{
    <p>There was a problem confirming your email address. Please try again or contact support.</p>
}